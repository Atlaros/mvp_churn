# Variables de Entorno - Sistema de Predicción de Churn
# Copia este archivo a .env y configura los valores según tu entorno

# ============================================
# CONFIGURACIÓN DE LA APLICACIÓN
# ============================================
APP_NAME="Churn Prediction System"
APP_VERSION="1.0.0"
ENVIRONMENT="development"  # development, staging, production

# ============================================
# RUTAS DE DIRECTORIOS
# ============================================
MODELS_DIR="models"
DATA_DIR="data"
LOGS_DIR="logs"
DATA_FILE="cleaned_data.csv"

# ============================================
# CONFIGURACIÓN DE LA API
# ============================================
API_HOST="0.0.0.0"
API_PORT="8000"
API_RELOAD="true"  # Solo en desarrollo
API_WORKERS="4"    # Número de workers en producción

# ============================================
# CONFIGURACIÓN DE STREAMLIT
# ============================================
STREAMLIT_PORT="8501"
STREAMLIT_SERVER_ADDRESS="0.0.0.0"
STREAMLIT_SERVER_HEADLESS="true"

# ============================================
# CONFIGURACIÓN DE LOGGING
# ============================================
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"
LOG_MAX_BYTES="10485760"  # 10MB
LOG_BACKUP_COUNT="5"

# ============================================
# CONFIGURACIÓN DE MODELOS
# ============================================
DEFAULT_MODEL="xgboost"  # random_forest, xgboost, neural_network
PREDICTION_THRESHOLD="0.5"
BATCH_SIZE="32"

